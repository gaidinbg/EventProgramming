@model EmployeeManagement.Models.EmployeeViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using(Html.BeginForm("Create", "Employees")) 
   
{
    @Html.ValidationSummary()
    @Html.ValidationSummary()
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="clearfix">
                    <div class="form-group">
                        @Html.LabelFor(model => model.FirstName) 
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    <div class="row">
            <div class="col-md-3">
                <div class="clearfix">
                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName) 
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", row = 5 })  

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="clearfix">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone)
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", row = 5 })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            
            <input type="submit" value="create"  class="btn btn-success"/>
        </div>

    </div>
}

