@*COMMENTS*@

@model AssignmentManager.Entities.Comment

@{
    ViewBag.Title = "Update";
}

<h2>Create</h2>

@using (Html.BeginForm("Update", "Comment"))
//ukazwa na formata na kyde da se nasochi. pyrvoto e action-as, as votoroto e kontrolera
{
    @Html.HiddenFor(model => model.AssignmentId)
    <div class="container">

        <div class="row">
            <div class="col-md-3">
                <div class="clearfix">
                    <div class="form-group">
                        @Html.HiddenFor(model => model.CreatedAt)
                        @Html.HiddenFor(model => model.AssignmentId)
                        @Html.LabelFor(model => model.Content, "Content:") @*Atribut specificirasht, kakvo iskame tochno da puishe na label-a vmesto da vzeme tova koeto e vkarano za title.*@
                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control", row = 5 })  @*lambda expression, mozhe da zapishem kakvoto iskame*@

                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <input type="submit" value="update" class="btn btn-success" />
        </div>

    </div>
}

